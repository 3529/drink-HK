/**index.wxss**/
page {
  background-color: rgb(118, 218, 255);
  padding-top: 200rpx;
}

.icon {
  width: 80rpx;
  height: 80rpx;
}

.help-popup {
  color: #222;
  font-size: 30rpx;
  padding: 40rpx;
  box-sizing: border-box;
  line-height: 2;
}

.clock-in-popup {
  padding: 50rpx 100rpx;
  box-sizing: border-box;
}

.intake {
  font-size: 60rpx;
  margin: 50rpx 0;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  font-weight: bold;
  display: flex;
  justify-content: center;
}

.time-check {
  width: 1000rpx;
  height: 200rpx;
  display: flex;
  flex-wrap:wrap;
  align-items: center;
  justify-content: flex-start;
  /* background-color: #f5f5f5; */

}

.time-check view {
  height: 80rpx;
  color:#363C4F;
  width: 180rpx;
  font-size: 34rpx;
  background-color: #f5f6fa;
  text-align: center;
  line-height: 80rpx;
  margin:10rpx;
  border-radius: 80rpx;
}

.scroll-view_H{
  height: 360rpx;
  white-space: nowrap;
}

.active{
  background-color: #5BC9A4 !important;
  color:#fff !important;
}